<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.denky.greattimetable.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textSize = "23dp"
                android:text="회원가입"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                />
            <EditText
                android:layout_width = "280dp"
                android:layout_height = "wrap_content"
                android:hint="아이디"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:textColor = "#000000"
                android:textColorHint="#A9A9A9"
                android:id="@+id/idText"
                android:drawableStart="@drawable/profile"
                android:drawableLeft="@drawable/profile"
                android:drawablePadding="10dp"
                android:background="@color/colorPrimary"
                />
            <EditText
                android:inputType="textPassword"
                android:layout_width = "280dp"
                android:layout_height = "wrap_content"
                android:hint="패스워드"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor = "#000000"
                android:textColorHint="#A9A9A9"
                android:id="@+id/passwordText"
                android:drawableStart="@drawable/pass"
                android:drawableLeft="@drawable/pass"
                android:background="@color/colorPrimary"
                android:drawablePadding="10dp"
                />
            <EditText
                android:layout_width = "280dp"
                android:layout_height = "wrap_content"
                android:hint="이메일"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:textColor = "#000000"
                android:textColorHint="#A9A9A9"
                android:id="@+id/emailText"
                android:drawableStart="@drawable/email"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="10dp"
                android:background="@color/colorPrimary"
                />
            <EditText
                android:layout_width = "280dp"
                android:layout_height = "wrap_content"
                android:hint="학교"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:textColor = "#000000"
                android:textColorHint="#A9A9A9"
                android:id="@+id/school"
                android:drawableStart="@drawable/school"
                android:drawableLeft="@drawable/school"
                android:drawablePadding="10dp"
                android:background="@color/colorPrimary"
                />
            <EditText
                android:layout_width = "280dp"
                android:layout_height = "wrap_content"
                android:hint="학과"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:textColor = "#000000"
                android:textColorHint="#A9A9A9"
                android:id="@+id/major"
                android:drawableStart="@drawable/major"
                android:drawableLeft="@drawable/major"
                android:drawablePadding="10dp"
                android:background="@color/colorPrimary"
                />
            <Button
                android:id="@+id/signup_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="가입하기"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
